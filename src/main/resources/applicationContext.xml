<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<!--Define dependency -->
	<bean id="myForuneService"
		class="context.config.HappyFortuneService">
	</bean>
	<bean id="myCoach"
		class="context.config.TrackCoach">
		<constructor-arg ref="myForuneService"></constructor-arg>
	</bean>
	<context:property-placeholder location="sport.properties"></context:property-placeholder>
	<bean id="myFootballCoach"
		class="context.config.FootballCoach">
		<property name="fortuneService" ref="myForuneService"></property>
		<property name="email" value= "${team}"></property>
		<property name="team" value="${email}"></property>
	</bean>
</beans>





